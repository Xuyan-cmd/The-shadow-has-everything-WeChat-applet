.me {
  padding-bottom: 150rpx;
}
.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 8%;
  height: 200rpx;
  background-color: #EEEEEE;
}
.info .box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
}
.info .title {
  font-weight: 700;
}
.info .subtitle {
  display: flex;
  align-items: center;
}
.content {
  padding-bottom: 150rpx;
}
.items {
  background-color: #fff;
  width: 100%;
  box-shadow: 0 12px 5px -10px rgba(0, 0, 0, 0.1), 0 0 4px 0 rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0 12px 5px -10px rgba(0, 0, 0, 0.1), 0 0 4px 0 rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  padding: 20rpx;
  margin-top: 10rpx;
  display: flex;
}
.items .let {
  width: 75rpx;
}
.items .righta {
  flex: 1;
}
.items .righta .top {
  display: flex;
}
.items .righta .content-wenz {
  font-size: 14px;
  margin-top: 10rpx;
}
.items .righta .btns {
  display: flex;
  margin-top: 7rpx;
}
.items .righta .btns .btns-item {
  color: #3377aa;
  padding: 4px 6px;
  margin-right: 4px;
  border-radius: 2px;
  background-color: #f0f7f9;
  display: inline-block;
  line-height: 1;
}
.content {
  padding: 20rpx 60rpx;
  background-color: #EEEEEE;
  min-height: 100vh;
}
.content .title {
  text-align: center;
  color: #000;
  font-size: 48rpx;
  font-weight: 700;
}
.content .box-img {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.content .box-img .subtitle {
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  margin-top: 15rpx;
}
.ipt {
  margin-top: 80rpx;
  padding: 0 40rpx;
}
.ipt-content  .u-input {
  padding-left: 80rpx !important;
}
.ipt-content {
  position: relative;
}
.ipt-content::before {
  content: url(data:image/png;base64,);
  display: block;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 8rpx;
  left: 10rpx;
}
.news {
  text-align: right;
  margin-top: 20rpx;
}
.tex::before {
  content: url(data:image/png;base64,);
  display: block;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 170rpx;
  margin-top: 5rpx;
}

